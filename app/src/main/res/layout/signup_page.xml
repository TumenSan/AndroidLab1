<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#E3562A"
        android:onClick="nextPage"
        android:text="&lt;"
        android:textColor="#78746D"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/GfG_full_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:src="@drawable/cool_kids_standing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="341dp"
        android:height="32dp"
        android:fontFamily="sans-serif"
        android:maxHeight="32dp"
        android:minHeight="32dp"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="#3C3A36"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GfG_full_logo"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="67dp"
        android:text="Create your account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GfG_full_logo"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/et_style"
        android:hint="Name"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textColor="#78746D"
        android:textColorHint="#78746D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GfG_full_logo" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="171dp"
        android:background="@drawable/et_style"
        android:hint="E-mail"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textColor="#78746D"
        android:textColorHint="#78746D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GfG_full_logo" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/et_style"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textColor="#78746D"
        android:textColorHint="#78746D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_name" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#E3562A"
        android:onClick="nextPage"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_submit2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="112dp"
        android:background="@android:color/transparent"
        android:onClick="nextPage"
        android:padding="0dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="#78746D"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>