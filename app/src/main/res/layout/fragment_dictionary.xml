<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DictionaryFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="275dp"
        android:width="120dp"
        android:height="32dp"
        android:fontFamily="sans-serif"
        android:maxHeight="32dp"
        android:minHeight="32dp"
        android:text="Part of speech:"
        android:textAlignment="center"
        android:textColor="#3C3A36"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_word"
        app:layout_constraintVertical_bias="0.131" />

    <EditText
        android:id="@+id/et_word"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/et_style"
        android:hint="Cooking"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textColor="#78746D"
        android:textColorHint="#78746D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="260dp"
        android:width="120dp"
        android:height="32dp"
        android:fontFamily="sans-serif"
        android:maxHeight="32dp"
        android:minHeight="32dp"
        android:text="Cooking"
        android:textAlignment="center"
        android:textColor="#3C3A36"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_word"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/texttranscr"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="24dp"
        android:width="120dp"
        android:height="30dp"
        android:fontFamily="sans-serif"
        android:text="[ˈkʊkɪŋ]"
        android:textAlignment="center"
        android:textColor="#E3562A"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_word"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:width="120dp"
        android:height="32dp"
        android:fontFamily="sans-serif"
        android:maxHeight="32dp"
        android:minHeight="32dp"
        android:text="Meanings:"
        android:textAlignment="center"
        android:textColor="#3C3A36"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_word" />

    <Button
        android:id="@+id/button"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#E3562A"
        android:onClick="nextPage"
        android:text="Add to dictionary"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>